<script type='text/javascript' src='https://cdn.firebase.com/js/client/1.0.15/firebase.js'></script>
<script type="text/javascript">
var fb = new Firebase("https://shibe-games.firebaseio.com/recommendations/heroku");
var recommend = function (userEmail, userFeedback) {
    var userFeedback = document.getElementById("game-title").value;
    var userEmail = document.getElementById("email").value;
 	fb.push({email: userEmail, feedback: userFeedback}); /*Pushes data to firebase*/
 	document.getElementById("instructions").innerHTML = "Recommendation recieved! You can recommend another here if you want, or head back to our main page for more awesome sales." ;
    return false;
}
</script>
<div class="panel">
	<h1>Want us to stock up on a game when it goes on sale? Recommend it here!</h1>
	<h4 id="instructions">We'll also send you a notification if you provide your email.</h4>
	<form>
		<input type="text" id="game-title" placeholder="Game title">
		<input type="email" id="email" placeholder="Email (option)">
	</form>
	<button class="success" onClick="recommend();">Recommend</button>
</div>