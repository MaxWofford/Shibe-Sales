<%= form_for @game, html: { multipart: true } do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <!--<%= f.label :reducedPrice %>-->
    <label>Original Price in USD</label>
    <br>
    <%= f.text_field :reducedPrice %>
  </div>
  <div class="field">
    <%= f.label :sale %><label>*in % off</label><br>
    <%= f.number_field :sale %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
