<% if user_signed_in? %>
<%= link_to 'New Listing', new_game_path, {:class => "button success"}%>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Description</th>
      <th>Reducedprice</th>
      <th>Sale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.user.email if game.user %></td>
        <td><%= game.description %></td>
        <td><%= game.reducedPrice %></td>
        <td><%= game.sale %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %>

<% @games.each do |game| %>
<div class="large-4 small-6 columns">
  <%= link_to game do%>
   <%= image_tag game.image.url, :class => "style_image" %>
  <div class="panel">
   <div class="inline">
     <!--<%= game.title %>--> <span class="sale">-<%= game.sale %>% </span>
     <!--<p class="strikeout">Ð 1,000</p>-->
     <span class="price">Ð <%= game.reducedPrice.to_i - game.reducedPrice.to_i * game.sale / 100 %></span>
   </div>
  </div>
  <% end %>
</div>
<% end %>
