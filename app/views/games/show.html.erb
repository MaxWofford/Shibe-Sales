<p id="notice"><%= notice %></p>
<%= image_tag @game.image.url %>
<p>
  <strong>Title:</strong>
  <%= @game.title %>
</p>
<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>

<p>
  <strong>Reducedprice:</strong>
  <%= @game.reducedPrice.to_i - @game.reducedPrice.to_i * @game.sale / 100  %>
</p>

<p>
  <strong>Sale:</strong>
  <%= @game.sale %>
</p>

<a class="success button" href="">Purchase <%= @game.sale %>% off</a>

<% if user_signed_in? %>
	<%= link_to 'Edit', edit_game_path(@game) %> |
	<%= link_to 'Back', games_path %>
<% end %>